<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytsuggationBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:weightSum="3"
    android:backgroundTint="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/lytfood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="OnClickBtn"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            app:srcCompat="@drawable/ic_home" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_food"
            android:textColor="@color/white"
            android:textSize="@dimen/p_text_size" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lytfloatingbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="OnClickBtn"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_add_24" />



    </LinearLayout>




    <LinearLayout
        android:id="@+id/lytMedicine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="OnClickBtn"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_card"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_medicine"
            android:textColor="@color/white"
            android:textSize="@dimen/p_text_size" />
    </LinearLayout>
</LinearLayout>